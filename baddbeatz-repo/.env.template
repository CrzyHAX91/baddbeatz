# ================================================================
# BADDBEATZ WEBSITE - ENVIRONMENT VARIABLES TEMPLATE
# ================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it's in .gitignore

# ================================================================
# FLASK APPLICATION SETTINGS
# ================================================================
FLASK_ENV=development
FLASK_SECRET_KEY=your_flask_secret_key_here
PORT=8000
DB_PATH=data/app.db

# ================================================================
# SECURITY SETTINGS
# ================================================================
MAX_CONTENT_LENGTH=16777216
RATE_LIMIT_STORAGE_URL=memory://

# ================================================================
# GOOGLE OAUTH2 CONFIGURATION
# ================================================================
GOOGLE_CLIENT_ID=621913429292-c5pjgr6297cj5psefrcvmbebo7umv8lj.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ================================================================
# GITHUB OAUTH2 CONFIGURATION
# ================================================================
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# ================================================================
# DISCORD OAUTH2 CONFIGURATION
# ================================================================
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# ================================================================
# YOUTUBE API CONFIGURATION
# ================================================================
YOUTUBE_API_KEY=your_youtube_api_key_here

# ================================================================
# AI/ML API KEYS
# ================================================================
# OpenAI API Key (for AI chat features)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Key (for AI models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Gemini API Key (for AI responses)
GEMINI_API_KEY=your_gemini_api_key_here

# ================================================================
# CLOUDFLARE WORKERS CONFIGURATION
# ================================================================
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# ================================================================
# EMAIL CONFIGURATION (if using email features)
# ================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password_here

# ================================================================
# SOCIAL MEDIA API KEYS (if integrating social features)
# ================================================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id_here

# ================================================================
# ANALYTICS & MONITORING
# ================================================================
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
SENTRY_DSN=your_sentry_dsn_here

# ================================================================
# DEPLOYMENT SETTINGS
# ================================================================
# Production domain for OAuth redirects
PRODUCTION_DOMAIN=https://baddbeatz.netlify.app

# CDN URLs (if using external CDN)
CDN_URL=https://your-cdn-url.com

# ================================================================
# DATABASE CONFIGURATION (if using external database)
# ================================================================
DATABASE_URL=sqlite:///data/app.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# ================================================================
# REDIS CONFIGURATION (for caching/sessions)
# ================================================================
REDIS_URL=redis://localhost:6379/0

# ================================================================
# FILE STORAGE CONFIGURATION
# ================================================================
# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# ================================================================
# PAYMENT PROCESSING (if adding e-commerce features)
# ================================================================
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ================================================================
# DEVELOPMENT/TESTING SETTINGS
# ================================================================
DEBUG=true
TESTING=false
LOG_LEVEL=INFO

# ================================================================
# NOTES:
# ================================================================
# 1. Replace all "your_*_here" values with actual credentials
# 2. Keep this file secure and never commit to version control
# 3. Use strong, unique values for all secret keys
# 4. For production, set FLASK_ENV=production and DEBUG=false
# 5. The Google OAuth2 client ID is already filled in from your request
# ================================================================
